@model List<EventViewModel>

@{
    ViewBag.Title = "Choose an Event";
}

<h2>Choose an Event</h2>

<div class="container">
    @if (Model.Any())
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="col-xs-12">
                    @Html.IconFor(model => model[i].IconFileName, IconSize.Small)
                    <a href="@Url.Action("Records", new { olympicEventId = Model[i].EventId })" class="btn btn-default btn-details">
                        @Html.DisplayFor(model => model[i].EventName)
                        &raquo;
                    </a>
                </div>
            </div>
            <div class="separator"></div>
        }
    }
    else
    {
        <h4 class="text-center"><em>No Events found.</em></h4>
    }
</div>