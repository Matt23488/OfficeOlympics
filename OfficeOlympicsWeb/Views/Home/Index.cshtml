@model RecordBoardViewModel

@{
    ViewBag.Title = "Index";
    int i = 0;
}

@while (i < Model.EventsWithRecords.Count)
{
    <div class="row">
        @do
        {
            <div class="col-md-4 event-panel" id="eventPanel@(Model.EventsWithRecords[i].Event.EventId)">
                @Html.Partial("TopThreePartial", Model.EventsWithRecords[i])
            </div>
            i++;
        } while (i % 3 != 0 && i < Model.EventsWithRecords.Count);
    </div>
}

@section modals{
    @Html.Partial("ModalPartial", (ModalViewModel)ViewBag.NewRecordModalViewModel)
}

@section styles{
    @Styles.Render("~/Content/home-index")
}

@section scripts{
    @Scripts.Render("~/bundles/home-index")
}