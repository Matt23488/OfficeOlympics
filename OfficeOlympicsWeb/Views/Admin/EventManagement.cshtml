@model List<EventViewModel>

@{
    ViewBag.Title = "Event Management";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Event Management</h2>

<div class="container">
    <div class="row">
        <div class="col-md-2 col-md-push-10 text-right">
            <a href="@Url.Action("AddEvent")" class="btn btn-success">
                <span class="glyphicon glyphicon-plus"></span>
                Add Event
            </a>
        </div>
    </div>
    <div class="separator"></div>
    @if (Model.Count == 0)
    {
        <h4 class="text-center">No Events Found.</h4>
    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(model => model.First().EventName)</th>
                                <th>@Html.LabelFor(model => model.First().EventType)</th>
                            </tr>
                        </thead> 
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="event-item @(Model[i].IsActive ? "" : "bg-danger")">
                                    <td>
                                        <input type="hidden" class="hidden-event-id" value="@Model[i].EventId" />
                                        @Html.IconFor(model => model[i].IconFileName, IconSize.Small)
                                        @Html.DisplayFor(model => model[i].EventName)
                                    </td>
                                    <td>@Html.DisplayFor(model => model[i].EventType)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>