@model List<EventViewModel>

@if (Model.Any())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="row">
            <div class="col-xs-12">
                @Html.IconFor(model => model[i].IconFileName, IconSize.Small)
                <a href="@Url.Action("Records", new { olympicEventId = Model[i].EventId })" class="btn btn-default" style="min-width: 150px;">
                    @Html.DisplayFor(model => model[i].EventName)
                    &raquo;
                </a>
            </div>
        </div>
        <div class="separator"></div>
    }
}
else
{
    <em>No events to show.</em>
}