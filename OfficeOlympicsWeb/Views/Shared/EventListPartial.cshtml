@model List<EventViewModel>

@if (Model.Any())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="row">
                <a href="@Url.Action("Records", new { olympicEventId = Model[i].EventId })" class="btn btn-default btn-details col-xs-12">
                    <div class="row">
                        <div class="col-xs-10">
                            @Html.IconFor(model => model[i].IconFileName, IconSize.Small)
                            @Html.DisplayFor(model => model[i].EventName)
                        </div>
                        <div class="col-xs-2 text-right">&raquo;</div>
                    </div>
                </a>
        </div>
        <div class="separator"></div>
    }
}
else
{
    <em>No events to show.</em>
}