@model List<RecordViewModel>

@if (Model.Any())
{
    <table class="table">
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(model => model[i].Competitor.FullName) - @Html.DisplayFor(model => model[i].Event):</td>
                    <td>@Html.DisplayFor(model => model[i].Score, "RecordScoreTemplate")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <em>No records to show.</em>
}
