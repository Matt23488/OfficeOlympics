@model List<RecordViewModel>

@if (Model.Any())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="row">
            <div class="non-btn non-btn-default non-btn-details col-xs-12">
                <div class="row">
                    <div class="col-xs-10">
                        @Html.IconFor(model => model[i].Event.IconFileName, IconSize.Small)
                        @Html.DisplayFor(model => model[i].Competitor.FullName)
                    </div>
                    <div class="col-xs-2 text-right">
                        @Html.DisplayFor(model => model[i].Score, "RecordScoreTemplate")
                    </div>
                </div>
            </div>
        </div>
        <div class="separator"></div>
    }
}
else
{
    <div class="row">
        <div class="non-btn non-btn-default non-btn-details col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    No records to show.
                </div>
            </div>
        </div>
    </div>
    <div class="separator"></div>
}
